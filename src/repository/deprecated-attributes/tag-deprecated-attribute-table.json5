{
  repository: {
    'tag-deprecated-attribute-table': {
      begin: '(?<=<table)',
      end: '(?=[>])',
      patterns: [
        {
          name: 'invalid.deprecated.attribute-name.table',
          match: '[\\s\\n\\r\\t]*(\\b(bgcolor|border|cellpadding|cellspacing|frame|rules|scheme|width)\\b)(=)?',
          captures: {
            '2': {
              name: 'invalid.deprecated.attribute-name.table'
            },
            '3': {
              name: 'constant.character.entity.html'
            }
          }
        },
        {
          include: '#tag-stuff'
        }
      ]
    }
  }
}
