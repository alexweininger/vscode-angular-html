{
  repository: {
    'tag-deprecated-attribute-h3': {
      begin: '(?<=<h3)',
      end: '(?=[>])',
      patterns: [
        {
          name: 'invalid.deprecated.attribute-name.h3',
          match: '[\\s\\n\\r\\t]*(\\b(align)\\b)(=)?',
          captures: {
            '2': {
              name: 'invalid.deprecated.attribute-name.h3'
            },
            '3': {
              name: 'constant.character.entity.html'
            }
          }
        },
        {
          include: '#tag-stuff'
        }
      ]
    }
  }
}
