{
  repository: {
    'tag-deprecated-attribute-img': {
      name: 'entity.other.attribute-name',
      begin: '(?<=<img)',
      end: '(?=[<>])',
      patterns: [
        {
          name: 'invalid.deprecated.attribute-name.img',
          match: '[\\s\\n\\r\\t]*(\\b(align|hspace|longdesc|name|vspace)\\b)(=)?',
          captures: {
            '2': {
              name: 'invalid.deprecated.attribute-name.img'
            },
            '3': {
              name: 'constant.character.entity.html'
            }
          }
        },
        {
          include: '#tag-stuff'
        }
      ]
    }
  }
}
